<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gm.gislain.tvshowapp.ShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/layout_backdrop">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/backdrop_imageview"
                android:alpha="0.7"
                android:contentDescription="@string/backdrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="40sp"
                android:maxLines="1"
                android:alpha="1.0"
                android:layout_centerHorizontal="true"
                android:id="@+id/show_title_textview"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1.0"
                android:layout_centerHorizontal="true"
                android:numStars="5"
                android:id="@+id/rating"
                android:layout_below="@id/show_title_textview"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/infos_margin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/year"/>

                <ImageView
                    android:layout_width="@dimen/separator_size"
                    android:layout_height="@dimen/separator_size"
                    android:layout_marginStart="@dimen/separator_margin"
                    android:layout_marginEnd="@dimen/separator_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/network"/>
                <ImageView
                    android:layout_width="@dimen/separator_size"
                    android:layout_height="@dimen/separator_size"
                    android:layout_marginStart="@dimen/separator_margin"
                    android:layout_marginEnd="@dimen/separator_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seasons"
                    android:id="@+id/seasons"/>
                <ImageView
                    android:layout_width="@dimen/separator_size"
                    android:layout_height="@dimen/separator_size"
                    android:layout_marginStart="@dimen/separator_margin"
                    android:layout_marginEnd="@dimen/separator_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/actors_margin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/actors"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/overview_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:id="@+id/overview"/>

        <TextView
            android:layout_marginTop="@dimen/similare_margin"
            android:layout_marginBottom="@dimen/similare_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="@string/similare"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/similaire_shows">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</ScrollView>
